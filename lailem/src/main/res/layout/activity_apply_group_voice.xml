<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical" >

    <com.lailem.app.widget.TopBarView
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reRecord"
        android:layout_width="61.4dp"
        android:layout_height="28.8dp"
        android:layout_gravity="right"
        android:layout_marginRight="15.4dp"
        android:layout_marginTop="15.4dp"
        android:background="@drawable/bg_corners"
        android:gravity="center"
        android:text="重录"
        android:visibility="invisible"
        android:textColor="#999999"
        android:textSize="15.4sp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/tip"
            android:background="@drawable/bg_voice_verify_gray_circle"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:text="按住即录"
            android:padding="0dp"
            android:gravity="center"
            android:textColor="#909090"
            android:textSize="15.4sp"/>
        <com.lailem.app.widget.CircleProgressView
            android:id="@+id/progressView"
            android:layout_width="190dp"
            android:layout_height="190dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="42.2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="82.6dp"
        android:background="@drawable/bg_capsule_orange_selector"
        android:gravity="center"
        android:text="申请加入"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="15.4sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="bottom"
        android:paddingBottom="35.6dp"
        android:text="请说说您的加群理由哟!"
        android:textColor="@color/text_medium_2"
        android:textSize="13.4sp" />

</LinearLayout>