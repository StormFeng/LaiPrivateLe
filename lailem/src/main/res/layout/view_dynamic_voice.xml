<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_voice"
              android:orientation="horizontal"
              android:paddingBottom="17.3dp"
              android:paddingLeft="15.8dp"
              android:paddingRight="6.2dp"
              android:paddingTop="17.3dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/playVoice"
            android:layout_width="54.4dp"
            android:layout_height="54.4dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_voice"/>

        <ImageView
            android:id="@+id/playProgress"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_voice_play_progress"/>
    </FrameLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="24.2dp"
        android:layout_marginRight="10.8dp"
        android:layout_weight="1"
        android:text="大家今晚有什么安排呢？要是都没安排那就开约吧！"
        android:textColor="@color/white"
        android:textSize="13.4sp"/>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3&apos;"
        android:textColor="@color/white"
        android:textSize="13.4sp"/>

</LinearLayout>