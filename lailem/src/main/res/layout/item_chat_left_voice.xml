<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7.5dp" >

    <ImageView
        android:id="@+id/headIv"
        android:layout_width="38.4dp"
        android:layout_height="38.4dp"
        android:src="@drawable/default_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="44.6dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nicknameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.5dp"
            android:layout_marginLeft="7.5dp"
            android:layout_marginRight="7.5dp"
            android:layout_marginTop="7.5dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="12.5sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/voiceLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_left"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="26dp"
                android:paddingRight="18dp"
                android:paddingTop="15dp" >

                <ImageView
                    android:id="@+id/voiceIv"
                    android:layout_width="18.2dp"
                    android:layout_height="19.2dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_voice_left1" />

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17.3dp"
                    android:layout_marginRight="102.9dp"
                    android:textColor="#FF909090"
                    android:textSize="13.4sp" />

                <ImageView
                    android:id="@+id/redDotIv"
                    android:layout_width="7.7dp"
                    android:layout_height="7.7dp"
                    android:background="@drawable/ic_reddot" />
            </LinearLayout>

            <ImageView
                android:id="@+id/send_fail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_send_fail"
                android:visibility="gone" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>