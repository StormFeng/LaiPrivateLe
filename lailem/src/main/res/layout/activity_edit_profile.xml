<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40.7dp"
            android:text="完善基本信息"
            android:textColor="@color/text_dark_1"
            android:textSize="21.1sp"/>

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25.4dp"
            android:text="使用真实信息能让人更快地找到并联系你"
            android:textColor="@color/text_medium_1"
            android:textSize="13.4sp"/>

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="75.8dp"
            android:layout_height="75.8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38.5dp"
            android:src="@drawable/bg_upload_avatar_small"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="153.6dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="36.3dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="昵称"
            android:paddingBottom="12.1dp"
            android:paddingTop="12.1dp"
            android:singleLine="true"
            android:textColor="@color/text_medium_1"
            android:textColorHint="@color/text_low_2"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="15.4sp"/>

        <ImageView
            android:layout_width="153.6dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/c_divider_line"/>

        <LinearLayout
            android:id="@+id/birthday_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/birthday"
                android:layout_width="153.6dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="选择生日"
                android:paddingBottom="9.3dp"
                android:paddingTop="30.7dp"
                android:singleLine="true"
                android:textColor="@color/text_medium_1"
                android:textColorHint="@color/text_low_2"
                android:textSize="15.4sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="153.6dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/c_divider_line"/>

        <RadioGroup
            android:id="@+id/sexRg"
            android:layout_width="153.6dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="9.3dp"
            android:paddingTop="30.7dp">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="15.1dp"
                android:drawableRight="@drawable/ic_login_checkbox"
                android:text="男"
                android:textColor="@color/text_medium_1"
                android:textSize="15.4sp"/>

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37.4dp"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawablePadding="15.1dp"
                android:drawableRight="@drawable/ic_login_checkbox"
                android:text="女"
                android:textColor="@color/text_medium_1"
                android:textSize="15.4sp"/>
        </RadioGroup>

        <ImageView
            android:layout_width="153.6dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/c_divider_line"/>

        <LinearLayout
            android:id="@+id/address_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address"
                android:layout_width="153.6dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="选择居住城市"
                android:paddingBottom="9.3dp"
                android:paddingTop="30.7dp"
                android:singleLine="true"
                android:textColor="@color/text_medium_1"
                android:textColorHint="@color/text_low_2"
                android:textSize="15.4sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="153.6dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/c_divider_line"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/orange_btn"
            android:enabled="false"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="17.3sp"/>

    </LinearLayout>
</ScrollView>