<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="right"
              android:orientation="horizontal"
              android:padding="7.5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44.6dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nicknameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.5dp"
            android:layout_marginLeft="7.5dp"
            android:layout_marginRight="7.5dp"
            android:layout_marginTop="7.5dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="12.5sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/send_fail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_send_fail"
                android:visibility="gone">
            </ImageView>

            <com.lailem.app.widget.ChatRightImageView
                android:id="@+id/contentIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="140dp"
                android:maxWidth="100dp"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/headIv"
        android:layout_width="38.4dp"
        android:layout_height="38.4dp"
        android:src="@drawable/default_avatar"/>

</LinearLayout>