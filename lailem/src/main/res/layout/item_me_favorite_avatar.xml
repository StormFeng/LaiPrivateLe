<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/c_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12.9dp"
        android:paddingLeft="15.4dp"
        android:paddingRight="15.4dp"
        android:paddingTop="13.4dp" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="36.5dp"
            android:layout_height="36.5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/empty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.6dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="林若曦"
                android:textColor="#222222"
                android:textSize="15.4sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="2015年5月1日 18:49"
                android:textColor="@color/text_medium_2"
                android:textSize="10.6sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.4dp"
        android:background="@drawable/c_divider_line" />

</LinearLayout>