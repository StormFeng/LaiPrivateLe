<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:clipToPadding="false"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_back_black"
            android:drawablePadding="4dp"
            android:paddingBottom="15.4dp"
            android:paddingLeft="9.6dp"
            android:paddingTop="15.4dp"
            android:text="上一步"
            android:textColor="#222222"
            android:textSize="16.3sp"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="15.4dp"
            android:paddingLeft="15.4dp"
            android:paddingRight="15.4dp"
            android:paddingTop="15.4dp"
            android:text="下一步"
            android:textColor="#222222"
            android:textSize="16.3sp"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28.7dp"
                android:text="创建活动"
                android:textColor="@color/text_dark_1"
                android:textSize="19.2sp"/>

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19.4dp"
                android:gravity="center_horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.4dp"
                android:text="创建活动邀请好友们一起，你是我的小伙伴"
                android:textColor="#666666"
                android:textSize="14.4sp"/>

            <FrameLayout
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="54.5dp"
                android:background="@drawable/bg_create_name">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="1dp">

                    <ImageView
                        android:id="@+id/material"
                        android:layout_width="257dp"
                        android:layout_height="218dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/empty"/>

                    <ImageView
                        android:id="@+id/chooseMaterial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="15.4dp"
                        android:layout_marginTop="14.4dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_choose_material"/>

                    <ImageView
                        android:id="@+id/randomMaterail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:paddingBottom="17.4dp"
                        android:paddingLeft="17.3dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_random"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|left"
                        android:hint="请输入活动名称"
                        android:paddingBottom="20dp"
                        android:paddingLeft="15.4dp"
                        android:paddingRight="15.4dp"
                        android:singleLine="true"
                        android:textColor="@color/text_dark_2"
                        android:textColorHint="@color/text_low_2"
                        android:textCursorDrawable="@drawable/text_cursor"
                        android:textSize="15.4sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="53dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/white"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>