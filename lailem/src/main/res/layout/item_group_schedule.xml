<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7.7dp"
        android:background="@drawable/bg_c_card"
        android:orientation="vertical"
        android:paddingBottom="15.3dp"
        android:paddingTop="15.4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="34.6dp"
                android:layout_height="34.6dp"
                android:layout_marginLeft="15.4dp"
                android:src="@drawable/default_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="林妹妹"
                    android:textColor="@color/text_dark_2"
                    android:textSize="15.4sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.5dp"
                    android:text="2015年5月1日 19:32"
                    android:textColor="@color/text_medium_2"
                    android:textSize="10.6sp" />
            </LinearLayout>
        </LinearLayout>

        <com.lailem.app.widget.dynamic.DynamicScheduleView
            android:id="@+id/dynamicSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/bg_dynamic_item_wrap"
            android:padding="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="34.6dp"
        android:layout_marginTop="7.7dp"
        android:scaleType="center"
        android:src="@drawable/ic_active_schedule_flag" />

</FrameLayout>