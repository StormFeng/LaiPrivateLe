<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="15.4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="7.7dp"
            android:layout_marginTop="15.4dp"
            android:src="@drawable/empty" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="15.4dp"
            android:layout_marginTop="21.1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark_2"
                android:textSize="15.4sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.1dp"
                android:drawableRight="@drawable/ic_addzan"
                android:textColor="#303030"
                android:textSize="13.4sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.9dp"
                android:background="@drawable/bg_me_dynamic_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#303030"
                    android:textSize="13.4sp" />

                <FrameLayout
                    android:layout_width="57.6dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="57.6dp"
                        android:layout_height="57.6dp"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/imagePlay"
                        android:layout_width="57.6dp"
                        android:layout_height="57.6dp"
                        android:src="@drawable/bg_me_dynamic_video" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="21.1dp"
        android:textColor="@color/text_medium_2"
        android:textSize="11.5sp" />

</RelativeLayout>