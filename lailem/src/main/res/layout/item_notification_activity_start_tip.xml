<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/c_divider_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16.3dp"
        android:paddingRight="15.6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_group_notice_speaker" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.2dp"
            android:background="@drawable/bg_group_notice_unread"
            android:gravity="center"
            android:text="未读"
            android:textColor="@color/white"
            android:textSize="11.5sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.7dp"
            android:text="活动还有半小时就要开始啦!"
            android:textColor="#222222"
            android:textSize="15.4sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23.5dp"
        android:paddingLeft="15.1dp"
        android:paddingRight="15.6dp"
        android:text="“XXXXX”活动还有半个小时就要开始啦!小伙伴们准备好了吗?"
        android:textColor="#666666"
        android:textSize="13.4sp" />

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg_group_notice_btn_selector"
        android:drawablePadding="6.5dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="14.4dp"
        android:text="查看小伙伴们到哪里了"
        android:textColor="@color/text_medium_1"
        android:textSize="13.4sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.4dp"
        android:layout_marginRight="15.4dp"
        android:layout_marginTop="37.4dp"
        android:background="#FFEEEEEE"
        android:orientation="horizontal"
        android:padding="7.7dp">

        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11.5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="活动名称，这里是活动名称"
                android:textColor="#FF4A90E2"
                android:textSize="14.4sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.6dp"
        android:background="@drawable/c_inset_line_15dot4" />

    <LinearLayout
        android:id="@+id/user_ll"
        android:layout_width="fill_parent"
        android:layout_height="55.7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15.4dp"
        android:paddingRight="15.6dp">

        <ImageView
            android:id="@+id/head"
            android:layout_width="34.6dp"
            android:layout_height="34.6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来了女神"
                android:textColor="#4A90E2"
                android:textSize="14.4sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.6dp"
                android:text="今天 13：25"
                android:textColor="#999999"
                android:textSize="10.6sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/right_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="7.9dp"
            android:drawableRight="@drawable/ic_arrow"
            android:text="13人已读"
            android:textColor="#999999"
            android:textSize="13.4sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/c_divider_line" />

</LinearLayout>