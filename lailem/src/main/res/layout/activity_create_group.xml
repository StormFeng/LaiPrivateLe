<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:clipToPadding="false"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_back_black"
            android:drawablePadding="4dp"
            android:paddingBottom="15.4dp"
            android:paddingLeft="9.6dp"
            android:paddingTop="15.4dp"
            android:text="上一步"
            android:textColor="#222222"
            android:textSize="16.3sp"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="15.4dp"
            android:paddingLeft="15.4dp"
            android:paddingRight="15.4dp"
            android:paddingTop="15.4dp"
            android:text="下一步"
            android:textColor="#222222"
            android:textSize="16.3sp"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28.7dp"
                android:text="广州天河篮球俱乐部"
                android:textColor="@color/text_dark_1"
                android:textSize="19.2sp"/>

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19.4dp"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.4dp"
                android:text="邀一帮好友组建群组，一齐畅快活动"
                android:textColor="#666666"
                android:textSize="14.4sp"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="57.3dp"
                android:background="@drawable/c_divider_line"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15.4dp"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.4dp"
                android:paddingTop="15.4dp">

                <TextView
                    android:layout_width="77.2dp"
                    android:layout_height="48dp"
                    android:text="类型"
                    android:textColor="@color/text_dark_2"
                    android:textSize="15.4sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/permissionRg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/publicType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/ic_permission_type_checkbox"
                            android:drawablePadding="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="公开"
                            android:textColor="@color/color_permission_type_checkbox"
                            android:textSize="15.4sp"/>

                        <RadioButton
                            android:id="@+id/privateType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableLeft="@drawable/ic_permission_type_checkbox"
                            android:drawablePadding="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="私密"
                            android:textColor="@color/color_permission_type_checkbox"
                            android:textSize="15.4sp"/>
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15.4dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/arrow_line_left_part"
                            android:layout_width="13dp"
                            android:layout_height="1px"
                            android:layout_gravity="bottom"
                            android:background="#D7D7D7"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_online_arrow"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:background="#D7D7D7"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/permissionTip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.2"
                        android:text="公开在附近群组中，附近的人能看到该群组信息及其动态。"
                        android:textColor="@color/text_low_1"
                        android:textSize="13.4sp"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/c_divider_line"/>

            <LinearLayout
                android:id="@+id/address_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="92.2dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.4dp"
                    android:text="地点"
                    android:textColor="@color/text_dark_2"
                    android:textSize="15.4sp"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择群地点"
                    android:minHeight="48dp"
                    android:textColor="@color/text_medium_2"
                    android:textColorHint="@color/text_low_2"
                    android:textSize="15.4sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15.6dp"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19.2dp"
                android:background="@drawable/c_divider_line"/>

            <EditText
                android:id="@+id/brief"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left|top"
                android:hint="编辑群资料，10-256个字"
                android:maxLength="256"
                android:minHeight="96dp"
                android:padding="14.4dp"
                android:textColor="@color/text_medium_2"
                android:textColorHint="@color/text_low_2"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSize="15.4sp"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>