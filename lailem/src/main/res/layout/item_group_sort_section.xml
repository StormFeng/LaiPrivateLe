<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/sortRg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15.4dp" >

        <RadioButton
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_sorttype_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="时间排序"
            android:textColor="@color/sorttype"
            android:textSize="13.4sp" />

        <RadioButton
            android:id="@+id/hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.3dp"
            android:layout_marginRight="16.3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_sorttype_selector"
            android:button="@null"
            android:gravity="center"
            android:text="热度排序"
            android:textColor="@color/sorttype"
            android:textSize="13.4sp" />

        <RadioButton
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_sorttype_selector"
            android:button="@null"
            android:gravity="center"
            android:text="距离排序"
            android:textColor="@color/sorttype"
            android:textSize="13.4sp" />
    </RadioGroup>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/c_divider_line" />

</LinearLayout>