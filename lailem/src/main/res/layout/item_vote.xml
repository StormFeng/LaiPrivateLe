<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <FrameLayout
        android:id="@+id/choice_fl"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:background="@drawable/bg_vote_item" >

        <ImageView
            android:id="@+id/bg"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_vote_item_color_1" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18.2dp"
            android:text="美味食府"
            android:textColor="@color/white"
            android:textSize="13.4sp" />

        <TextView
            android:id="@+id/voteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15.6dp"
            android:text="1名"
            android:textColor="@color/white"
            android:textSize="13.4sp" />
    </FrameLayout>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22.1dp"
        android:background="@drawable/ic_vote_checkbox"
        android:button="@null"
        android:visibility="gone" />

</LinearLayout>