<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_login_back"
            android:drawablePadding="4dp"
            android:paddingBottom="15.4dp"
            android:paddingLeft="9.6dp"
            android:paddingTop="15.4dp"
            android:text="上一步"
            android:textColor="#222222"
            android:textSize="16.3sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/headTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28.7dp"
        android:text="基本信息"
        android:textColor="@color/text_dark_1"
        android:textSize="21.1sp" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25.4dp"
        android:text="使用真实信息能让人更快地找到并联系你"
        android:textColor="@color/text_medium_1"
        android:textSize="13.4sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="153.6dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36.3dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="昵称"
        android:paddingBottom="12.1dp"
        android:paddingTop="12.1dp"
        android:singleLine="true"
        android:textColor="@color/text_medium_1"
        android:textColorHint="@color/text_low_2"
        android:textCursorDrawable="@drawable/text_cursor"
        android:textSize="15.4sp" />

    <ImageView
        android:layout_width="153.6dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/c_divider_line" />

    <LinearLayout
        android:id="@+id/birthday_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/birthday"
            android:layout_width="153.6dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="选择生日"
            android:paddingBottom="9.3dp"
            android:paddingTop="30.7dp"
            android:singleLine="true"
            android:textColor="@color/text_medium_1"
            android:textColorHint="@color/text_low_2"
            android:textSize="15.4sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="153.6dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/c_divider_line" />

    <RadioGroup
        android:id="@+id/sexRg"
        android:layout_width="153.6dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="9.3dp"
        android:paddingTop="30.7dp" >

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="15.1dp"
            android:drawableRight="@drawable/ic_login_checkbox"
            android:text="男"
            android:textColor="@color/text_medium_1"
            android:textSize="15.4sp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37.4dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="15.1dp"
            android:drawableRight="@drawable/ic_login_checkbox"
            android:text="女"
            android:textColor="@color/text_medium_1"
            android:textSize="15.4sp" />
    </RadioGroup>

    <ImageView
        android:layout_width="153.6dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/c_divider_line" />

    <LinearLayout
        android:id="@+id/address_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/address"
            android:layout_width="153.6dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="选择居住城市"
            android:paddingBottom="9.3dp"
            android:paddingTop="30.7dp"
            android:singleLine="true"
            android:textColor="@color/text_medium_1"
            android:textColorHint="@color/text_low_2"
            android:textSize="15.4sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="153.6dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/c_divider_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/orange_btn"
            android:enabled="false"
            android:gravity="center"
            android:text="最后一步"
            android:textColor="@color/white"
            android:textSize="17.3sp" />
    </LinearLayout>

</LinearLayout>