<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <com.lailem.app.widget.DotIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>

    <TextView
        android:id="@+id/loginWeixin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19.2dp"
        android:layout_marginRight="19.2dp"
        android:layout_marginTop="36.5dp"
        android:background="@drawable/bg_login_third"
        android:drawableLeft="@drawable/ic_login_weixin"
        android:gravity="center"
        android:paddingLeft="16.3dp"
        android:paddingRight="46.3dp"
        android:text="微信登录"
        android:textColor="@android:color/white"
        android:textSize="16.3sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28.8dp"
        android:layout_marginTop="28.8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.2dp"
            android:layout_marginRight="14.9dp"
            android:layout_weight="1"
            android:background="@drawable/bg_login"
            android:gravity="center"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="16.3sp" />

        <TextView
            android:id="@+id/visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.9dp"
            android:layout_marginRight="19.2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_login_visitor"
            android:gravity="center"
            android:text="直接使用"
            android:textColor="@android:color/white"
            android:textSize="16.3sp" />
    </LinearLayout>

</LinearLayout>