<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical" >

    <com.lailem.app.widget.TopBarView
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingLeft="15.4dp"
                android:paddingTop="9dp"
                android:text="消息设置" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line" />

            <LinearLayout
                android:id="@+id/newNoticeToggle_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.4dp"
                    android:text="新消息通知"
                    android:textColor="@color/text_dark_2"
                    android:textSize="15.4sp" />

                <com.lailem.app.widget.togglebutton.ToggleButton
                    android:id="@+id/newNoticeToggle"
                    android:layout_width="49dp"
                    android:layout_height="29.8dp"
                    android:layout_marginRight="16.3dp"
                    toggle:borderWidth="1px"
                    toggle:onColor="#4CD864" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line" />

            <LinearLayout
                android:id="@+id/displayNoticeDetailToggle_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.4dp"
                    android:text="通知显示消息详情"
                    android:textColor="@color/text_dark_2"
                    android:textSize="15.4sp" />

                <com.lailem.app.widget.togglebutton.ToggleButton
                    android:id="@+id/displayNoticeDetailToggle"
                    android:layout_width="49dp"
                    android:layout_height="29.8dp"
                    android:layout_marginRight="16.3dp"
                    toggle:borderWidth="1px"
                    toggle:onColor="#4CD864" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"
                android:visibility="gone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingLeft="15.4dp"
                android:paddingTop="9dp"
                android:text="隐私设置" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line" />

            <LinearLayout
                android:id="@+id/chatEnableToggle_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.4dp"
                    android:text="允许任何人私聊我"
                    android:textColor="@color/text_dark_2"
                    android:textSize="15.4sp" />

                <com.lailem.app.widget.togglebutton.ToggleButton
                    android:id="@+id/chatEnableToggle"
                    android:layout_width="49dp"
                    android:layout_height="29.8dp"
                    android:layout_marginRight="16.3dp"
                    toggle:borderWidth="1px"
                    toggle:onColor="#4CD864" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_inset_line_15dot4"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/blackList_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.4dp"
                    android:text="黑名单"
                    android:textColor="@color/text_dark_2"
                    android:textSize="15.4sp" />

                <TextView
                    android:id="@+id/blackListCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="3人"
                    android:textColor="@color/text_medium_2"
                    android:textSize="15.4sp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.6dp"
                    android:layout_marginRight="15.6dp"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingLeft="15.4dp"
                android:paddingTop="9dp"
                android:text="安全设置" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line" />

            <TextView
                android:id="@+id/managePwd"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/c_item_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15.4dp"
                android:text="修改密码"
                android:textColor="@color/text_dark_2"
                android:textSize="15.4sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingLeft="15.4dp"
                android:paddingTop="9dp"
                android:text="通用设置" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line" />

            <TextView
                android:id="@+id/clearCache"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/c_item_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15.4dp"
                android:text="清除缓存"
                android:textColor="@color/text_dark_2"
                android:textSize="15.4sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_inset_line_15dot4" />

            <TextView
                android:id="@+id/clearChatCache"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/c_item_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15.4dp"
                android:text="清除所有聊天记录"
                android:textColor="@color/text_dark_2"
                android:textSize="15.4sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line" />
        <LinearLayout
            android:id="@+id/logout_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.4dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/c_item_selector"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/text_orange"
                android:textSize="17.3sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.4dp"
                android:background="@drawable/c_divider_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>