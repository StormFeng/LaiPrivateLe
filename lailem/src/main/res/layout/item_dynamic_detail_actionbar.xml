<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="7.7dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/addfavor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_addfavor"
            android:drawablePadding="5.8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="21.6dp"
            android:paddingRight="19.6dp"
            android:paddingTop="16.8dp"
            android:text="18"
            android:textColor="#999999"
            android:textSize="12.5sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />

        <TextView
            android:id="@+id/addcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_addcomment"
            android:drawablePadding="5.8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="21.6dp"
            android:paddingRight="19.6dp"
            android:paddingTop="16.8dp"
            android:text="76"
            android:textColor="#999999"
            android:textSize="12.5sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />

        <TextView
            android:id="@+id/addZan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_me_dynamic_zan"
            android:drawablePadding="5.8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="21.6dp"
            android:paddingRight="19.6dp"
            android:paddingTop="16.8dp"
            android:text="124"
            android:textColor="#999999"
            android:textSize="12.5sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/c_divider_line" />

</LinearLayout>