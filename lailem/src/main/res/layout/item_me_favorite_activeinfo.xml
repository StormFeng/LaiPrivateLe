<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <com.lailem.app.widget.ImageViewFit
                android:id="@+id/activeImage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/empty"
                app:proportion="0.6686" />

            <ImageView
                android:id="@+id/mask"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#33000000" />

            <TextView
                android:id="@+id/activeJoinCount"
                android:layout_width="wrap_content"
                android:layout_height="21.1dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="38dp"
                android:background="@drawable/bg_main_active_joincount"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:text="118人参加"
                android:textColor="@color/white"
                android:textSize="10.6sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/activeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="70dp"
                android:gravity="center"
                android:text="天河吉他爱好者周末欢聚"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activeDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_active_near_date"
                android:drawablePadding="15dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="周六 05/04 22:00"
                android:textColor="#202020"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/activeAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_active_near_loc"
                android:drawablePadding="15dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="天河·车陂"
                android:textColor="#202020"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>