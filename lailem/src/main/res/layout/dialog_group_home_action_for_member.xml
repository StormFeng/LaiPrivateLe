<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_first_item_bg"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="举报"
            android:textColor="#ff037AFF"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_middle_item_bg"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="分享"
            android:textColor="#ff037AFF"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_last_item_bg"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="退出群组"
            android:textColor="#FE3824"
            android:textSize="17dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:background="@drawable/dialog_item_bg"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:text="取消"
        android:textColor="#ff037AFF"
        android:textSize="17dp" />

</LinearLayout>