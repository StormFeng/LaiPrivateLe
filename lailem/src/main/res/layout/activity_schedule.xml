<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.lailem.app.widget.TopBarView
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7.7dp"
                android:background="@drawable/bg_c_card"
                android:orientation="vertical"
                android:paddingBottom="15.3dp"
                android:paddingTop="15.4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="34.6dp"
                        android:layout_height="34.6dp"
                        android:layout_marginLeft="15.4dp"
                        android:src="@drawable/default_avatar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9.6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="林妹妹"
                            android:textColor="@color/text_dark_2"
                            android:textSize="15.4sp" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.5dp"
                            android:text="2015年5月1日 19:32"
                            android:textColor="@color/text_medium_2"
                            android:textSize="10.6sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.9dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.4dp"
                        android:layout_marginRight="11.5dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_active_schedule_date" />

                    <TextView
                        android:id="@+id/scheduleDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.4dp"
                        android:text="2015年5月20日 (周六) 上午11:20"
                        android:textColor="@color/text_dark_2"
                        android:textSize="14.4sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.9dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.4dp"
                        android:layout_marginRight="11.5dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_active_schedule_address" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.4dp"
                        android:text="广东省广州市天河区大观路XXXX号火炉山森林公园"
                        android:textColor="@color/text_dark_2"
                        android:textSize="14.4sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contact_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.9dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.4dp"
                        android:layout_marginRight="11.5dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_active_schedule_man" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.4dp"
                        android:text="联系人 联系电话"
                        android:textColor="@color/text_dark_2"
                        android:textSize="14.4sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.9dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.4dp"
                        android:layout_marginRight="11.5dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_active_schedule_anchor" />

                    <TextView
                        android:id="@+id/theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.4dp"
                        android:text="篝火晚会"
                        android:textColor="#4A90E2"
                        android:textSize="17.3sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.9dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.4dp"
                        android:layout_marginRight="11.5dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_active_schedule_detail" />

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.4dp"
                        android:text="请各位活动成员在参加时记得自备纸巾，因赞助方不提供，谢谢!\n活动流程:\n1、活动流程第一项:鸣炮\n2、活动流程第二项:奏乐\n3、活动流程第三项:一拜天地\n4、活动流程第四项:二拜高堂"
                        android:textColor="@color/text_dark_2"
                        android:textSize="14.4sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="34.6dp"
                android:layout_marginTop="7.7dp"
                android:scaleType="center"
                android:src="@drawable/ic_active_schedule_flag" />
        </FrameLayout>
    </ScrollView>

</LinearLayout>