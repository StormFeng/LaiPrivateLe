<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical" >

    <com.lailem.app.widget.TopBarView
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <!-- 提醒类型 -->

    <RadioGroup
        android:id="@+id/remindRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <RadioButton
            android:id="@+id/remindAll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/c_item_selector"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/c_checkbox"
            android:gravity="center_vertical"
            android:paddingLeft="15.4dp"
            android:paddingRight="15.4dp"
            android:text="全部提醒"
            android:textColor="@color/text_dark_2"
            android:textSize="15.4sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/c_divider_line" />

        <RadioButton
            android:id="@+id/remindImportant"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/c_item_selector"
            android:button="@null"
            android:drawableRight="@drawable/c_checkbox"
            android:gravity="center_vertical"
            android:paddingLeft="15.4dp"
            android:paddingRight="15.4dp"
            android:text="重要提醒"
            android:textColor="@color/text_dark_2"
            android:textSize="15.4sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/c_divider_line" />

        <RadioButton
            android:id="@+id/remindNormal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/c_item_selector"
            android:button="@null"
            android:drawableRight="@drawable/c_checkbox"
            android:gravity="center_vertical"
            android:paddingLeft="15.4dp"
            android:paddingRight="15.4dp"
            android:text="一般提醒"
            android:textColor="@color/text_dark_2"
            android:textSize="15.4sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/c_divider_line" />

        <RadioButton
            android:id="@+id/remindNever"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/c_item_selector"
            android:button="@null"
            android:drawableRight="@drawable/c_checkbox"
            android:gravity="center_vertical"
            android:paddingLeft="15.4dp"
            android:paddingRight="15.4dp"
            android:text="从不提醒"
            android:textColor="@color/text_dark_2"
            android:textSize="15.4sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/c_divider_line" />
    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15.4dp"
        android:text="*重要提醒:重要消息通知，仅提醒活动通知，活动日程提醒\n*一般提醒:提醒活动动态，及活动通知，活动日程"
        android:textColor="@color/text_medium_2"
        android:textSize="11.5sp" />

</LinearLayout>